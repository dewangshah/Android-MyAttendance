<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@drawable/navigation_background">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivProfilePicNavig"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/default_profile"
        app:civ_border_color="@color/silver"
        app:civ_border_width="3dp" />


    <TextView
        android:id="@+id/tvIDNavig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvNameNavig"
        android:layout_alignStart="@+id/tvNameNavig"
        android:layout_below="@+id/tvNameNavig"
        android:layout_marginTop="13dp"
        android:text="ID: M2013CM1063"
        android:textColor="#ffffff"
        android:textSize="12dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvNameNavig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="24dp"
        android:text="FirstName LastName"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/ivProfilePicNavig"
        android:layout_toRightOf="@+id/ivProfilePicNavig"
        android:layout_toEndOf="@+id/ivProfilePicNavig" />


</RelativeLayout>