<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dewang.myattendance.ProfLogin">

    <Button
        android:id="@+id/btnProfLogin"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:background="@drawable/button_round"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="25dp" />


    <TextView
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivProfessor"
        android:gravity="center"
        android:text="Professor Login"
        android:textColor="#4c565f"
        android:textSize="29dp" />


    <EditText
        android:id="@+id/etProfUserName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="#0000"
        android:drawableLeft="@drawable/user"
        android:drawablePadding="12dp"
        android:gravity="left"
        android:hint="Username"
        android:maxLength="15"
        android:padding="12dp"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/etProfPassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etProfUserName"
        android:layout_alignStart="@+id/etProfUserName"
        android:layout_below="@+id/etProfUserName"
        android:background="#0000"
        android:drawableLeft="@drawable/pass"
        android:drawablePadding="12dp"
        android:gravity="left"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLength="12"
        android:padding="12dp"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/ivProfessor"
        android:layout_width="400dp"
        android:layout_height="250dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="17dp"
        app:srcCompat="@drawable/teacherbg" />

    <CheckBox
        android:id="@+id/remember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnProfLogin"
        android:layout_alignLeft="@id/btnProfLogin"
        android:layout_alignStart="@id/btnProfLogin"
        android:layout_marginBottom="19dp"
        android:layout_weight="2"
        android:buttonTint="@color/colorhint"
        android:checked="false"
        android:text="Remember me"
        android:textColor="@color/colorhint"
        android:textSize="11dp" />


</RelativeLayout>
