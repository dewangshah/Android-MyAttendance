<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/loginbground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dewang.myattendance.StudentLogin"
    >

    <Button
        android:id="@+id/btnStudlogin"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:background="@drawable/button_round"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Student Login"
        android:textColor="#4c565f"
        android:textSize="29dp"
        android:gravity="center"
        android:layout_below="@+id/ivStudent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="250dp"
        app:srcCompat="@drawable/studentbg"
        android:id="@+id/ivStudent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp" />

    <EditText
        android:id="@+id/etStudRegNo"
        android:textSize="16dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Enter Registration No."
        android:background="#0000"
        android:padding="12dp"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/pass"
        android:drawablePadding="12dp"
        android:layout_above="@+id/remember"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp" />

    <CheckBox
        android:layout_weight="2"
        android:id="@+id/remember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember me"
        android:checked="false"
        android:buttonTint="@color/colorhint"
        android:textColor="@color/colorhint"
        android:textSize="11dp"
        android:layout_marginBottom="19dp"
        android:layout_above="@+id/btnStudlogin"
        android:layout_alignLeft="@+id/btnStudlogin"
        android:layout_alignStart="@+id/btnStudlogin" />

    <EditText
        android:id="@+id/etStudId"
        android:textSize="16dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Enter Student ID"
        android:maxLength="15"
        android:background="#0000"
        android:padding="12dp"
        android:gravity="left"
        android:drawableLeft="@drawable/user"
        android:drawablePadding="12dp"
        android:layout_above="@+id/etStudRegNo"
        android:layout_alignLeft="@+id/etStudRegNo"
        android:layout_alignStart="@+id/etStudRegNo" />


</RelativeLayout>
